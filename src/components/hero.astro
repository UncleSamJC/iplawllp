---
import { Picture } from "astro:assets";

import heroBg from "@/assets/hero-bg.jpg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import PrimaryButton from "./ui/primary-button.astro";
---

<main
  class="relative grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-16 bg-cover bg-center bg-no-repeat overflow-hidden"
  style={`background-image: url(${heroBg.src})`}>
  <div class="absolute inset-0 bg-white/30"></div>
  <div class="relative z-10 py-6 md:order-1 hidden md:block">

  </div>
  <div class="relative z-10 ml-20">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-semibold lg:tracking-tight xl:tracking-tighter text-gray-700">
      Trusted IP Law service in Nanaimo
    </h1>
    <p class="text-lg mt-4 text-gray-800 max-w-xl">
      We'll help you identify, protect and profit from your IP rights.<wbr /> Work with IP Law, you can create your IP with no stress. 
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/contact"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bx-phone" />
        Contact Us Today
      </Link>

     
    </div>
  </div>
</main>
